{
  "name": "econsulting-rest",
  "description": "REST API for Econsulting App",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon --exec babel-node ./server/bin/www",
    "build": "npm run build --prefix client",
    "operation": "node ./scripts/function.js",
    "client": "npm run start --prefix client",
    "server": "nodemon --exec babel-node ./server/bin/www",
    "postinstall": "cd client && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "apidoc": "apidoc -i app/ -o apidoc/",
    "manage:translations": "node ./translationManager.js",
    "seeder": "node app/seeders/cityCountrySeed.js && node app/seeders/hospitalSeed.js && node app/seeders/productSeed.js && node app/seeders/programSeed.js && node app/seeders/programKeyValueSeed.js && node app/seeders/insuraceProviderSeed.js && node app/seeders/userInviteSeed.js && node app/seeders/questionSeed.js && node app/seeders/surveyTemplate.js"
  },
  "dependencies": {
    "atob": "^2.1.2",
    "aws-sdk": "^2.304.0",
    "axios": "^0.18.0",
    "babel-plugin-lodash": "^3.3.4",
    "bcrypt": "^3.0.4",
    "chalk": "^2.4.1",
    "concurrently": "^4.0.1",
    "cookie-parser": "~1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "country-data": "0.0.31",
    "cronofy": "^3.0.6",
    "date-fns": "^1.30.1",
    "debug": "~2.6.9",
    "dotenv": "^6.0.0",
    "ejs": "~2.5.7",
    "express": "^4.18.2",
    "express-formidable": "^1.2.0",
    "express-graphql": "^0.6.12",
    "express-validator": "^5.3.0",
    "faker": "^4.1.0",
    "filepond": "^4.0.1",
    "fullcalendar-reactwrapper": "^1.0.7",
    "getstream": "^4.2.2",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.1.1",
    "helmet": "^3.13.0",
    "http-errors": "~1.6.2",
    "joi": "^14.3.1",
    "js-md5": "^0.7.3",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "lodash-es": "^4.17.11",
    "minio": "^7.0.2",
    "mongodb": "^3.1.1",
    "mongoose": "5.4.10",
    "morgan": "~1.9.0",
    "multer": "^1.4.1",
    "node-schedule": "^1.3.1",
    "nodemailer": "^5.1.1",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pdfkit": "^0.8.3",
    "rbac": "^5.0.3",
    "react": "^16.6.3",
    "react-filepond": "^6.0.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "request": "^2.88.0",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "twilio": "^3.22.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-transform-arrow-functions": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "css-loader": "^1.0.1",
    "husky": "^1.3.1",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.8",
    "prettier": "^1.16.4",
    "react-intl-translations-manager": "^5.0.3",
    "style-loader": "^0.23.1"
  },
  "nodemonConfig": {
    "watch": [
      "app/*",
      "server/*",
      "routes/*",
      "libs/*"
    ],
    "delay": "2500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,less,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
